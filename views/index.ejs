<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Comic Book App</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Comic Book App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Products from Comic Book App Database</h2></div>
    <br>
    
    <!-- Search form -->
    <form class="d-flex mb-4" action="/search" method="GET">
      <input class="form-control me-2" type="search" name="query" placeholder="Search by title, author, illustrator" aria-label="Search" required>
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  
    <table class="table table-hover small text-center">
      <thead>
        <tr>
          <th width="100">Comic Name</th>
          <th width="100">Comic Cover</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i = 0; i < products.length; i++) { %>
          <tr>
            <td><a href="/product/<%= products[i].productId %>"><%= products[i].productName %></a></td>
            <td><img src="/images/<%= products[i].image %>" width="200"></td>
          </tr>
        <% } %>
      </tbody>                    
    </table>
    
    <!-- Pagination controls -->
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">
        <% for(let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= (i === page) ? 'active' : '' %>">
            <a class="page-link" href="/?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>
</body>
</html>
